  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mohammad-hassani/iran-city/issues"
  },
  "homepage": "https://github.com/mohammad-hassani/iran-city#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^29.2.0",
    "jest": "^29.2.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4"
  }
